<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006600"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="4.06" >

    <Button
        android:id="@+id/btnoptionmenu_news"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:text="@string/menu_News"
        android:drawableTop="@drawable/news"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="#000000" />

    <Button
        android:id="@+id/btnoptionmenu_tour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/plane"
        android:text="@string/menu_tour"
        android:textSize="13sp"
        android:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="#000000" />

    <Button
        android:id="@+id/btnoptionmenu_favorite"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:text="@string/menu_favorite"
        android:textSize="13sp"
        android:drawableTop="@drawable/favorite"
        android:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"
        android:background="#000000" />

    <Button
        android:id="@+id/btnoptionmenu_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawableTop="@drawable/settings"
        android:text="@string/menu_settings"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>